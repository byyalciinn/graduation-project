// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String           @id @default(cuid())
  name           String?
  email          String           @unique
  emailVerified  DateTime?
  password       String
  image          String?
  
  // Onboarding fields
  role           String?          // 'buyer' or 'seller'
  categories     String[]         @default([])
  city           String?
  postalCode     String?
  notifications  Boolean          @default(true)
  bio            String?
  onboardingCompleted Boolean      @default(false)
  
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  accounts       Account[]
  sessions       Session[]
  productRequests ProductRequest[]
  sentOffers     Offer[]          @relation("SellerOffers")
  payments       Payment[]        @relation("BuyerPayments")
  addresses      Address[]
  orders         Order[]
  negotiations   Negotiation[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model ProductRequest {
  id                String   @id @default(cuid())
  userId            String
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Temel Bilgiler
  productName       String
  category          String
  description       String   @db.Text
  quantity          Int
  
  // Fiyat ve Zaman Bilgileri
  maxBudget         Float?
  deliveryCity      String
  deliveryDistrict  String
  offerDeadline     DateTime?
  
  // Görsel ve Ek Bilgiler
  exampleImageUrl   String?
  brandModel        String?
  
  // Dinamik alanlar (JSON olarak saklanacak)
  dynamicFields     Json?
  
  // Durum
  status            String   @default("active") // active, completed, cancelled
  
  offers            Offer[]
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("product_requests")
}

model Offer {
  id                String         @id @default(cuid())
  
  // İlişkiler
  productRequestId  String
  productRequest    ProductRequest @relation(fields: [productRequestId], references: [id], onDelete: Cascade)
  
  sellerId          String
  seller            User           @relation("SellerOffers", fields: [sellerId], references: [id], onDelete: Cascade)
  
  // Teklif Detayları
  price             Float
  deliveryTime      Int            // Gün cinsinden teslimat süresi
  message           String?        @db.Text
  
  // Durum
  status            String         @default("pending") // pending, accepted, rejected, withdrawn
  
  // Alıcı yanıtı
  buyerResponse     String?        @db.Text
  respondedAt       DateTime?
  
  // Müzakere
  negotiations      Negotiation[]
  
  // Payment relation
  payment           Payment?
  
  // Order relation
  order             Order?
  
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt

  @@map("offers")
  @@index([productRequestId])
  @@index([sellerId])
}

model Negotiation {
  id                String         @id @default(cuid())
  
  // İlişkiler
  offerId           String
  offer             Offer          @relation(fields: [offerId], references: [id], onDelete: Cascade)
  
  senderId          String
  sender            User           @relation(fields: [senderId], references: [id], onDelete: Cascade)
  
  // Müzakere Detayları
  message           String         @db.Text
  proposedPrice     Float?         // Önerilen fiyat (varsa)
  proposedDelivery  Int?           // Önerilen teslimat süresi (varsa)
  isAiGenerated     Boolean        @default(false)
  
  createdAt         DateTime       @default(now())

  @@map("negotiations")
  @@index([offerId])
  @@index([senderId])
}

model Payment {
  id                String         @id @default(cuid())
  
  // İlişkiler
  offerId           String         @unique
  offer             Offer          @relation(fields: [offerId], references: [id], onDelete: Cascade)
  
  buyerId           String
  buyer             User           @relation("BuyerPayments", fields: [buyerId], references: [id], onDelete: Cascade)
  
  // Ödeme Detayları
  amount            Float
  status            String         @default("pending") // pending, completed, failed, cancelled
  paymentMethod     String?        // credit-card, bank-transfer, digital-wallet
  
  // Ödeme Tarihleri
  paidAt            DateTime?
  
  // Order relation
  order             Order?
  
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt

  @@map("payments")
  @@index([buyerId])
  @@index([status])
}

model Address {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  title       String
  fullName    String
  phone       String
  addressLine String   @db.Text
  city        String
  district    String
  postalCode  String
  type        String   @default("home") // home, office, other
  isDefault   Boolean  @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("addresses")
  @@index([userId])
}

model Order {
  id                String         @id @default(cuid())
  
  // İlişkiler
  buyerId           String
  buyer             User           @relation(fields: [buyerId], references: [id], onDelete: Cascade)
  
  offerId           String         @unique
  offer             Offer          @relation(fields: [offerId], references: [id], onDelete: Cascade)
  
  paymentId         String         @unique
  payment           Payment        @relation(fields: [paymentId], references: [id], onDelete: Cascade)
  
  // Sipariş Detayları
  orderNumber       String         @unique
  productName       String
  totalAmount       Float
  
  // Durum ve Timeline
  currentStatus     String         @default("placed") // placed, processing, shipped, in_transit, delivered, cancelled
  estimatedDelivery DateTime?
  
  // Timeline Events (JSON)
  timelineEvents    Json?          // Array of {id, label, description, timestamp, completed, current}
  
  // Teslimat Bilgileri
  shippingAddress   String?        @db.Text
  trackingNumber    String?
  
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt

  @@map("orders")
  @@index([buyerId])
  @@index([currentStatus])
}
