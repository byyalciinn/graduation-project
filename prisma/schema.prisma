// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String           @id @default(cuid())
  name           String?
  email          String           @unique
  emailVerified  DateTime?
  password       String
  image          String?
  
  // Onboarding fields
  role           String?          // 'buyer' or 'seller'
  categories     String[]         @default([])
  city           String?
  postalCode     String?
  notifications  Boolean          @default(true)
  bio            String?
  onboardingCompleted Boolean      @default(false)
  
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  accounts       Account[]
  sessions       Session[]
  productRequests ProductRequest[]
  sentOffers     Offer[]          @relation("SellerOffers")

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model ProductRequest {
  id                String   @id @default(cuid())
  userId            String
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Temel Bilgiler
  productName       String
  category          String
  description       String   @db.Text
  quantity          Int
  
  // Fiyat ve Zaman Bilgileri
  maxBudget         Float?
  deliveryCity      String
  deliveryDistrict  String
  offerDeadline     DateTime?
  
  // Görsel ve Ek Bilgiler
  exampleImageUrl   String?
  brandModel        String?
  
  // Dinamik alanlar (JSON olarak saklanacak)
  dynamicFields     Json?
  
  // Durum
  status            String   @default("active") // active, completed, cancelled
  
  offers            Offer[]
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("product_requests")
}

model Offer {
  id                String         @id @default(cuid())
  
  // İlişkiler
  productRequestId  String
  productRequest    ProductRequest @relation(fields: [productRequestId], references: [id], onDelete: Cascade)
  
  sellerId          String
  seller            User           @relation("SellerOffers", fields: [sellerId], references: [id], onDelete: Cascade)
  
  // Teklif Detayları
  price             Float
  deliveryTime      Int            // Gün cinsinden teslimat süresi
  message           String?        @db.Text
  
  // Durum
  status            String         @default("pending") // pending, accepted, rejected, withdrawn
  
  // Alıcı yanıtı
  buyerResponse     String?        @db.Text
  respondedAt       DateTime?
  
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt

  @@map("offers")
  @@index([productRequestId])
  @@index([sellerId])
}
